<Window x:Class="MyGarden2.Windows.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGarden2.Windows"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="RegisterWindow" Height="500" Width="700">
    <Grid Background="#2E4A29">
        <Border MinWidth="400" Margin="15" Background="YellowGreen" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="GreenYellow" ShadowDepth="0" />
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Добро пожаловать, садовник!" FontSize="30" FontWeight="DemiBold" Margin="0 0 0 20" HorizontalAlignment="Center" />
                <Grid Margin="0 0 0 20">
                    <Button HorizontalAlignment="Left" x:Name="loginButton" Content="Войти в существующий аккаунт"  Style="{StaticResource MaterialDesignFlatButton}" Click="loginButton_Click"  />
                </Grid>
                <TextBox x:Name="name" materialDesign:HintAssist.Hint="Введите ваше имя (будет отображаться в приложении):" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <TextBox x:Name="login" materialDesign:HintAssist.Hint="Введите логин (будет использован при входе):" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <PasswordBox x:Name="password1" materialDesign:HintAssist.Hint="Введите пароль:" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                <PasswordBox x:Name="password2" materialDesign:HintAssist.Hint="Повторите пароль:" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                <Button x:Name="createAccountButton" Content="Создать аккаунт" Margin=" 0 20" Background="Green" Click="createAccountButton_Click" IsDefault="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
