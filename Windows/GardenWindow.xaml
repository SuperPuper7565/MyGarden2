<Window x:Class="MyGarden2.Windows.GardenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGarden2.Windows" xmlns:local1="clr-namespace:MyGarden2.ViewModels"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Мои грядки" Height="737" Width="933">
    <Window.Background>
        <ImageBrush ImageSource="/Windows/1000_F_137057776_NiVFgIsCOA8cKb5gpJlPNVVj9DxXFhLS.jpg"/>
    </Window.Background>

    <Window.DataContext>
        <local1:GardenViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Storyboard x:Key="MenuOpen">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="60"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="200"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="MenuClose">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="200"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="60"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpenMenu">
            <BeginStoryboard Storyboard="{StaticResource MenuOpen}"/>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonCloseMenu">
            <BeginStoryboard Storyboard="{StaticResource MenuClose}"/>
        </EventTrigger>
    </Window.Triggers>
    <Grid>
        <!-- Верхняя панель с текстом и меню -->
        <Grid Height="70" VerticalAlignment="Top" Background="#FF79B712" Opacity="0.8">
            <TextBlock Text="{Binding Head}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Arial" FontSize="28"/>
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Right" Background="#FF79B712">
                <TextBlock Text="{Binding User.Name}" VerticalAlignment="Center" FontFamily="Arial" FontSize="18"/>
                <materialDesign:PopupBox Margin="0 10" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                    <StackPanel Width="150" Background="#FF79B712" Opacity="0.8" Margin="0,15,0,0">
                        <Button x:Name="changeAccount" Content="Сменить аккаунт" Click="changeAccount_Click"/>
                        <Button x:Name="deleteAccount" Content="Удалить аккаунт" Click="deleteAccount_Click"/>
                    </StackPanel>
                </materialDesign:PopupBox>
            </StackPanel>
        </Grid>

        <!-- Слева выезжающая панель -->
        <Grid x:Name="GridMenu" Width="60" HorizontalAlignment="Left" Background="#FF79B712" Opacity="0.8" Panel.ZIndex="2">
            <StackPanel>
                <Grid Height="70" Background="#FF006900">
                    <Button x:Name="ButtonCloseMenu" Width="60" Height="60" VerticalAlignment="Top" HorizontalAlignment="Right" Visibility="Collapsed" Click="ButtonCloseMenu_Click">
                        <materialDesign:PackIcon Kind="ArrowLeft" Width="25" Height="25"/>
                    </Button>
                    <Button x:Name="ButtonOpenMenu" Width="60" Height="60" VerticalAlignment="Top" HorizontalAlignment="Right" Click="ButtonOpenMenu_Click">
                        <materialDesign:PackIcon Kind="Menu" Width="25" Height="25"/>
                    </Button>
                </Grid>
                <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="DarkGreen">
                    <ListViewItem Height="60" MouseLeftButtonUp="ShowCollection">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PlantOutline" Width="25" Height="25" Margin="10" VerticalAlignment="Center"/>
                            <TextBlock Text="Коллекция" VerticalAlignment="Center" Margin="20 10" FontFamily="Arial" FontSize="16"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60" MouseLeftButtonUp="ShowGardenBeds">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Greenhouse" Width="25" Height="25" Margin="10" VerticalAlignment="Center"/>
                            <TextBlock Text="Грядки" VerticalAlignment="Center" Margin="20 10" FontFamily="Arial" FontSize="16"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60" MouseLeftButtonUp="ShowPlants">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plant" Width="25" Height="25" Margin="10" VerticalAlignment="Center"/>
                            <TextBlock Text="Растения" VerticalAlignment="Center" Margin="20 10" FontFamily="Arial" FontSize="16"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>

        <!-- Основной контент -->
        <Grid Margin="60 70 0 0" Panel.ZIndex="1">
            <ContentControl Content="{Binding CurrentView}" />
        </Grid>
    </Grid>
</Window>
