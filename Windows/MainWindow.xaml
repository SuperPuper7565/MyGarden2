<Window x:Class="MyGarden2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGarden2"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="MainWindow" Height="450" Width="700">
    <Grid Background="#2E4A29">
        <Border MinWidth="400" Margin="15" Background="YellowGreen" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="GreenYellow" ShadowDepth="0" />
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Добро пожаловать, садовник!" FontSize="30" FontWeight="DemiBold" Margin="0 0 0 20" HorizontalAlignment="Center" />
                <Grid Margin="0 0 0 20">
                    <Button x:Name="createNewAccountButton" HorizontalAlignment="Left" Content="Нет аккаунта? Создай новый!"  Style="{StaticResource MaterialDesignFlatButton}" Click="createNewAccountButton_Click" />
                </Grid>
                <TextBox x:Name="login" materialDesign:HintAssist.Hint="Введите логин:" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <PasswordBox x:Name="password" materialDesign:HintAssist.Hint="Введите пароль:" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                <Button x:Name="loginButton" Content="Войти в аккаунт" Margin=" 0 20" Background="Green" Click="loginButton_Click" Cursor="Hand" IsDefault="True"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
