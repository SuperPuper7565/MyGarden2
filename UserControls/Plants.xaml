<UserControl x:Class="MyGarden2.UserControls.Plants"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyGarden2.UserControls" xmlns:local1="clr-namespace:MyGarden2.Models"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="667" d:DesignWidth="873">
    <Grid>
        <Grid Width ="250" HorizontalAlignment="Left" Background="#FF8ED911" Opacity="0.8">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ContentControl Content="{Binding ListCurrentView}" Grid.Row="0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="10">
                <Button x:Name="CatalogButton" Click="CatalogButton_Click" Background="DarkGreen" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileTree" Width="20" Height="20" Margin="0 0 4 0"/>
                        <TextBlock Text="Каталог" VerticalAlignment="Center" FontWeight="Medium"/>
                    </StackPanel>
                </Button>
                <Button x:Name="SearchButton" Click="SearchButton_Click" Background="DarkGreen" Margin="5">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Search" Width="20" Height="20" Margin="0 0 4 0"/>
                        <TextBlock Text="Поиск" VerticalAlignment="Center" FontWeight="Medium"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Margin="250 0 0 0">
            <ContentControl Content="{Binding PlantCurrentView}" />
        </Grid>
    </Grid>
</UserControl>
