<UserControl x:Class="MyGarden2.UserControls.AddOrEditGardenBed"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyGarden2.UserControls"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="667" d:DesignWidth="623">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Кнопки управления -->
            <RowDefinition Height="Auto"/>
            <!-- Чекбокс "Теплица" и размер клетки -->
            <RowDefinition Height="*"/>
            <!-- Сетка грядки -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопка сохранения -->
        </Grid.RowDefinitions>

        <!-- Панель с кнопками изменения сетки -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="10">
            <Button Content="Добавить ряд" Width="130" Margin="5" Click="AddRow_Click" Background="#FF79B712" Opacity="0.8" Padding="5"/>
            <Button Content="Удалить ряд" Width="120" Margin="5" Click="RemoveRow_Click" Background="#FF79B712" Opacity="0.8" Padding="5"/>
            <Button Content="Добавить столбец" Width="160" Margin="5" Click="AddColumn_Click" Background="#FF79B712" Opacity="0.8" Padding="5"/>
            <Button Content="Удалить столбец" Width="140" Margin="5" Click="RemoveColumn_Click" Background="#FF79B712" Opacity="0.8" Padding="5"/>
        </StackPanel>

        <!-- Чекбокс для теплицы и TextBox для размера клетки -->
        <Border Grid.Row="2" 
                Background="#FF79B712" 
                Opacity="0.75"
                CornerRadius="4"
                Padding="8"
                HorizontalAlignment="Center"
                Margin="5">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Чекбокс теплицы -->
                <CheckBox x:Name="GreenhouseCheckBox"
                          HorizontalAlignment="Center"
                          Checked="GreenhouseCheckBox_Checked"
                          Unchecked="GreenhouseCheckBox_Unchecked"
                          Style="{StaticResource MaterialDesignCheckBox}">
                    <CheckBox.Resources>
                        <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="White"/>
                    </CheckBox.Resources>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Greenhouse" 
                                                Width="20" 
                                                Height="20"
                                                Margin="0 0 8 0"/>
                        <TextBlock Text="Теплица" 
                                   VerticalAlignment="Center"
                                   FontWeight="Medium"/>
                    </StackPanel>
                </CheckBox>

                <!-- Разделитель -->
                <Rectangle Width="2" Height="30" Fill="White" Margin="10 0" Opacity="0.5"/>

                <!-- Поле для размера клетки -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5 0">
                    <TextBlock Text="Размер клетки (см):" 
                               VerticalAlignment="Center"
                               Margin="0 0 5 0"
                               FontWeight="Medium"/>
                    <TextBox x:Name="CellSizeTextBox"
                             Width="50"
                             VerticalAlignment="Center"
                             TextAlignment="Center"
                             materialDesign:HintAssist.Hint="px"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    <Button x:Name="ConfirmCellCize" 
                            Content="OK"
                            Width="40"
                            Margin="5 0 0 0"
                            Padding="5"
                            Click="ConfirmCellCize_Click"
                            Background="#FF79B712"
                            Opacity="0.8"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Сетка грядки -->
        <Grid Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid Name="GardenGrid"/>
        </Grid>

        <!-- Кнопка сохранения -->
        <Button x:Name="SaveButton"
                Content="Применить изменения"
                Grid.Row="4"
                Width="200"
                Height="40"
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Click="SaveButton_Click"
                Background="#FF79B712" 
                Opacity="0.8"
                Padding="5"/>

        <Button x:Name="CloseButton"
                Grid.Row="0"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Margin="5"
                Width="30" 
                Height="30"
                Style="{StaticResource MaterialDesignIconButton}"
                Background="#FF79B712"
                Opacity="0.8"
                Click="CloseButton_Click">
            <materialDesign:PackIcon Kind="Close" Width="20" Height="20" />
        </Button>
    </Grid>
</UserControl>